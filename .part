if prods.length > 0
                .grid
                    each products in prods
                        articel.card.product-item
                            header.card__header
                                h1.product__title #{products.title}
                            div.card__image
                                img(src="https://suneducationgroup.com/wp-content/uploads/2017/08/a-book-a-week-image-list-challenges-300x188.jpg", alt="A book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even
                        div.card__action    
            else 
                h1 No Products